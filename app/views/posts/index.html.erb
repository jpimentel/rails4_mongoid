<h1>Listing posts</h1>

<div class="row" ng-app="myApp" ng-controller="PostListCtrl">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Starred</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
          <tr ng-repeat="post in posts">
            <td>{{ post.title }}</td>
            <td>{{ post.body }}</td>
            <td>{{ post.starred }}</td>
            <td><a href="/posts/{{ post.id }}">Show</a></td>
            <td><a href="/posts/{{ post.id }}/edit">Edit</a></td>
            <td><a href="#" ng-click="deletePost(post)">Remove</a></td>
          </tr>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Post', new_post_path %>
  </div>
</div>
